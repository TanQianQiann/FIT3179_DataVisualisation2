{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Birth Rates Across Countries",
  "width": 650,
  "height": 450,
  "background": "#e2e3de",
  "config": {
    "text": { "font": "Open Sans" },
    "background": "transparent",
    "axis": {
      "labelFont": "Open Sans",
      "titleFont": "Open Sans",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "grid": false
    },
    "legend": { "labelFont": "Open Sans", "titleFont": "Open Sans" },
    "view": { "stroke": null }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/TanQianQiann/FIT3179_DataVisualisation2/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"},
      "encoding": {
        "tooltip": {"field": "note"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanQianQiann/FIT3179_DataVisualisation2/main/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanQianQiann/FIT3179_DataVisualisation2/main/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/TanQianQiann/FIT3179_DataVisualisation2/main/data/cleaned-world-data.csv"
            },
            "key": "Country",
            "fields": ["Birth Rate", "Continent"]
          }
        },
        {
          "filter": "Continent_selection == null || datum.properties.CONTINENT == Continent_selection"
        }
      ],
      "selection": {
        "hover": {
          "type": "single",
          "on": "mouseover",
          "empty": "none",
          "fields": ["properties.NAME"]
        }
      },
      "encoding": {
        "color": {
          "field": "Birth Rate",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 20, 30, 40],
            "range": ["#feedde", "#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          },
          "legend": {
            "title": ["Number of births " , "(per 1,000 population)"],
            "titleLimit": 250
          }
        },
        "opacity": {
          "condition": {
            "selection": "hover",
            "value": 0.2 
          },
          "value": 1 
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "properties.CONTINENT", "type": "nominal", "title": "Continent"},
          {"field": "Birth Rate", "type": "quantitative", "title": "Number of births (per 1,000 population)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanQianQiann/FIT3179_DataVisualisation2/main/data/cleaned-world-data.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        {
          "filter": {
            "and": [
              { "field": "Country", "equal": "Niger" }
            ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "dx": 190,
        "dy": 280,
        "fontSize": 12,
        "fontWeight": "bold"
      },
      "encoding": {
        "text": {
          "value": ["Countries in Africa exceeding", "30 births per 1,000 people"]
        },
        "color": {"value": "black"},
        "x": {"value": 200},
        "y": {"value": 50}
      }
    }
  ]
}
