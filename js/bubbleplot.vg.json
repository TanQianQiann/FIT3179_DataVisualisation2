{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 370,
  "background": "#e2e3de",
  "title": "GDP and Life Expectancy Across Countries",
  "data": {
    "url": "data/cleaned-world-data.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.GDP > 0" },
    { "filter": "datum.Life_expectancy > 0" },
    { "filter": "datum.Population > Population_Above" },
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {
      "calculate": "datum.GDP / 1000000", 
      "as": "GDP_in_millions" 
    }
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "GDP_in_millions", 
      "type": "quantitative",
      "title": "GDP (in millions)",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [100, 100000000]}  
    },
    "y": {
      "field": "Life_expectancy",
      "type": "quantitative",
      "title": "Life Expectancy",
      "scale": {"domain": [30, 90]}  
    }
  },
  "layer": [
    {
      "mark": "circle",
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        },
        "grid": {
          "type": "interval",
          "bind": "scales"
        }
      },
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": { "format": ".1s" }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#377eb8",
              "#f734a6",
              "#a65628"
            ]
          }
        },
        "opacity": { 
          "condition": {"selection": "continent_highlight", "value": 0.8},
          "value": 0.1 },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          { "field": "GDP_in_millions", "type": "quantitative", "format": ",.0f" , "title": "GDP (in millions)" }, 
          { "field": "Life_expectancy", "type": "quantitative", "format": "," , "title": "Life Expectancy" },
          { "field": "Population", "type": "quantitative", "format": "," }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Togo' || datum['Country'] == 'Iceland' || datum['Country'] == 'Nigeria' || datum['Country'] == 'Chad' || datum['Country'] == 'United States of America'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          { "field": "GDP_in_millions", "type": "quantitative", "format": ",.0f" , "title": "GDP (in millions)" }, 
          { "field": "Life_expectancy", "type": "quantitative", "format": "," , "title": "Life Expectancy" },
          { "field": "Population", "type": "quantitative", "format": "," }
        ]
      }
    }
  ]
}
