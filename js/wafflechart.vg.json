{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 360,
    "width": 360,
    "title": "Distribution of Advanced and Emerging Countries",
    "background": "#e2e3de",
    "config": {
      "text": { "font": "Open Sans" },
      "background": "transparent",
      "axis": {
        "labelFont": "Open Sans",
        "titleFont": "Open Sans",
        "labelFontSize": 12,
        "titleFontSize": 14,
        "grid": false
      },
      "legend": { "labelFont": "Open Sans", "titleFont": "Open Sans" },
      "view": { "stroke": null }
    },
    "data": {
      "url": "https://raw.githubusercontent.com/TanQianQiann/FIT3179_DataVisualisation2/main/data/imfcountries.csv"
    },
    "transform": [
      {
        "joinaggregate": [
          {"op": "count", "field": "imf_class_2023", "as": "TotalCount"}
        ]
      },
      {
        "joinaggregate": [
          {"op": "count", "field": "imf_class_2023", "as": "ClassCount"}
        ],
        "groupby": ["imf_class_2023"]
      },
      {
        "calculate": "round(datum.ClassCount / datum.TotalCount * 100)",
        "as": "Percent"
      },
      {
        "aggregate": [{"op": "min", "field": "Percent", "as": "P"}],
        "groupby": ["imf_class_2023"]
      },
      {"calculate": "sequence(1,datum.P+1)", "as": "S"},
      {"flatten": ["S"]},
      {
        "window": [{"op": "row_number", "as": "id"}],
        "sort": [{"field": "imf_class_2023", "order": "ascending"}]
      },
      {"calculate": "ceil (datum.id / 10)", "as": "row"},
      {"calculate": "datum.id - datum.row * 10", "as": "col"}
    ],
    
    "layer": [
      {
        "mark": {
          "type": "rect",
          "filled": true,
          "tooltip": true,
          "stroke": "black",
          "strokeWidth": 0.5
          },
        "encoding": {
          "x": {"field": "col", "type": "ordinal", "axis": null},
          "y": {"field": "row", "type": "ordinal", "axis": null, "sort": "-y"},
          "color": {
            "field": "imf_class_2023",
            "type": "nominal",
            "scale": {
              "domain": ["Advanced", "Emerging", "Others"],
              "range": ["#FF4B33", "#F4D03F", "#7F8C8D"]
            },
            "legend": {
              "title": "Classification",
              "symbolStrokeWidth": 0,
              "orient": "bottom"
            }
          },
        "opacity": {
            "condition": {
              "param": "hover",
              "value": 1
            },
            "value": 0.6
          },
        "tooltip": [
            {"field": "imf_class_2023", "title": "Classification", "type": "nominal"},
            {"field": "P", "title": "Percentage(%)", "type": "quantitative", "format": ".0f"}
          ]    
        },
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "on": "mouseover",
              "clear": "mouseout"
            }
          }
        ]
      },
      {
        "data": {
          "values": [
            { "imf_class_2023": "Others", "percentage_label": "6%", "x": 1.1, "y": 1.9 },
            { "imf_class_2023": "Emerging", "percentage_label": "70%", "x": 0.85, "y": 1.1 },
            { "imf_class_2023": "Advanced", "percentage_label": "24%", "x": 0.85, "y": 0.2 }
          ]
        },
        "mark": {
          "type": "text",
          "fontSize": 25,
          "fontWeight": "bold",
          "fill": "black",
          "align": "left",
          "baseline": "middle",
          "opacity": 0.7,
          "dx": -125
        },
        "encoding": {
          "x": { "field": "x", "type": "quantitative", "axis": null },
          "y": { "field": "y", "type": "quantitative", "axis": null },
          "text": { "field": "percentage_label", "type": "nominal" }
        }
      }
    ]
  }
  